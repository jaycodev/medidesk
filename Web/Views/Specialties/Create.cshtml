@model Web.Models.Specialties.CreateSpecialtyDTO

@{
    ViewData["Title"] = "Crear especialidad";
}

<h4 class="text-center mb-3 text-body-emphasis">
    <i class="fa-solid fa-circle-plus me-1"></i>
    Crear especialidad
</h4>

<form asp-action="Create" method="post">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-circle-xmark me-1"></i>
            @ViewBag.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <p class="text-danger mb-3">
        * Obligatorio
    </p>

    <div class="row mb-2">
        <div class="col-md-6 mb-2">
            <label asp-for="Name" class="form-label"></label>
            <span class="text-danger">*</span>
            <input asp-for="Name" class="form-control" placeholder="Nombre de la especialidad" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Descripción breve"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-left-long me-1"></i>
            Volver
        </a>

        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-circle-plus me-1"></i>
            Agregar
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
