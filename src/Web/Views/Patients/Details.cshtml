@model Web.Models.Patients.PatientDetailViewModel

@{
    ViewData["Title"] = "Detalles paciente";
}

<h4 class="mb-4 text-body-emphasis text-center">
    <i class="fa-solid fa-circle-info me-1"></i>
    Detalles paciente
</h4>

<div class="container">
    <div class="row">
        <dl class="row">
            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.UserId)</dt>
                <dd>
                    <span class="badge bg-body-tertiary text-body-emphasis border">@Model.UserId</span>
                </dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.FirstName)</dt>
                <dd class="text-body">@Model.FirstName</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.LastName)</dt>
                <dd class="text-body">@Model.LastName</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Email)</dt>
                <dd class="text-body">@Model.Email</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Phone)</dt>
                <dd class="text-body">@Model.Phone</dd>
            </div>

            @{
                var culture = new System.Globalization.CultureInfo("es-PE");
                var formattedBirthDate = Model.BirthDate.ToString("dd MMM yyyy", culture) ?? "";
            }

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.BirthDate)</dt>
                <dd class="text-body">@formattedBirthDate</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.BloodType)</dt>
                <dd class="text-body">@Model.BloodType</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.ProfilePicture)</dt>
                <dd class="text-body mt-1">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                    {
                        <img src="@Model.ProfilePicture" alt="Foto de perfil" width="64" height="64" class="rounded-circle border" />
                    }
                    else
                    {
                        <i class="fa-solid fa-circle-user text-muted" style="font-size: 64px;"></i>
                    }
                </dd>
            </div>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-end gap-2 mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-left-long me-1"></i>
        Volver
    </a>

    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary">
        <i class="fa-solid fa-pen me-1"></i>
        Editar
    </a>
</div>
